    "haskell.plugin.class.codeLensOn": false,
    "haskell.plugin.importLens.codeLensOn": false,
    "haskell.plugin.refineImports.codeLensOn": false,
    "haskell.plugin.tactics.codeLensOn": false,
    "haskell.plugin.hlint.diagnosticsOn": false,
    "zig.zls.path": "/home/brian/.config/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
    "zig.zls.checkForUpdate": false,
    "editor.experimental.useCustomCodeActionMenu": true,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1,
        "asvetliakov.vscode-neovim": 1
    },
    "workbench.activityBar.location": "hidden",
    "rust-analyzer.cargo.features": [
        "kernel"
    ],
    "vscoq.proof.mode": 1
}
