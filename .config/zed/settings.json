// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-20240620"
        },
        "version": "2"
    },
    "show_inline_completions": true,
    "theme": "Gruvbox Material Dark",
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "features": {
        "inline_completion_provider": "supermaven"
    },
    "format_on_save": "off",
    "ensure_final_newline_on_save": true,
    // disable cursor blink
    "cursor_blink": false,
    // use relative line numbers
    "relative_line_numbers": true,
    // hide the scroll bar
    "scrollbar": { "show": "never" },
    // "theme": "Github Dark",
    "vim_mode": true,
    "vim": {
        "use_system_clipboard": "always"
    },
    "terminal": {
        "shell": {
            "program": "fish"
        },
        "detect_venv": {
            "on": {
                "activate_script": "fish"
            }
        }
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "buffer_line_height": "standard",
    // "buffer_line_heigh6": "comfortable",
    // "Zed Mono": "Cascadia Code",
    // "buffer_font_family": "Fira Code Retina",
    "buffer_font_family": "Cascadia Code",
    "ui_font_family": "Cascadia Code",
    // "ui_font_family": "Zed Mono",
    // "ui_font_family": "Fira Code Retina",
    // "buffer_font_family": "Zed Mono",
    "project_panel": {
        "folder_icons": true
    },
    "tab_size": 4,
    "languages": {
        "Python": {
            "language_servers": ["pyright", "ruff"],
            "formatter": [
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ]
        },
        "Haskell": {
            "language_servers": ["hls", "!static-ls", "..."],
            "tab_size": 2
        },
        "OCaml": {
            "tab_size": 2
        },
        "OCaml Interface": {
            "tab_size": 2
        }
    },
    "tab_bar": {
        "show": true
    },
    "lsp": {
        "lsp": {
            "pyright": {
                "settings": {
                    "python": {
                        "pythonPath": ".venv/bin/python"
                    }
                }
            }
        },
        "hls": {
            "initialization_options": {
                "haskell": {
                    "formattingProvider": "ormolu",
                    "plugin": {
                        "hlint": {
                            "globalOn": false
                        }
                    }
                }
            }
        }
    }
}
